@using ServiceBooking.WEB.Models
@model PerformerSorts

@{
    var sorts = new List<string>
    {
        "New performers first",
        "Best performers first",
    };
}
<br />
<div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" style="width: 180px;" type="button" data-toggle="dropdown">
        @sorts[(int)Model]
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        @foreach (var item in sorts)
        {
            string liClass = "";
            if (sorts.IndexOf(item) == (int)Model)
            {
                liClass = "active";
            }
            <li class="@liClass">
                @Html.ActionLink(item, "Index", "Performers", new
           {
               categoryId = ViewBag.CurrentCategoryId,
               newApplications = ViewBag.IsNewPage,
               sort = (PerformerSorts)(sorts.IndexOf(item))
           }, null)
            </li>
        }
    </ul>
</div>


