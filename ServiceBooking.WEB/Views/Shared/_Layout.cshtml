<script type="text/javascript">
    function init() {
        if (@ViewBag.IsDefault == true){
            $('#img').attr('style', "display: none;");
        }
        else {
            $('#defaultImg').attr('style', "display: none;");
        }
    }
</script>
    
</body>
</html>
