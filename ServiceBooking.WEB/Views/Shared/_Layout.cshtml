@using ServiceBooking.WEB.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Service Booking</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <link href='@Url.Content("~/Content/CustomStyles.css")' rel="stylesheet" type="text/css" />
    <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
    <link href='@Url.Content("~/Content/themes/base/autocomplete.css")' rel="stylesheet" type="text/css" />
    
